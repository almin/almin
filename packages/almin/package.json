{
  "name": "almin",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/almin/almin.git"
  },
  "author": "azu",
  "email": "azuciao@gmail.com",
  "homepage": "https://github.com/almin/almin",
  "license": "MIT",
  "files": [
    "src/",
    "lib/"
  ],
  "bugs": {
    "url": "https://github.com/almin/almin/issues"
  },
  "version": "0.13.6",
  "description": "Flux/CQRS patterns for JavaScript app.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "clean": "rimraf lib/",
    "build": "npm-run-all -s clean build:src build:lib",
    "build:src": "tsc --project .",
    "build:lib": "npm-run-all -p build:lib:*",
    "build:lib:cp_type_def": "cpx type-definitions/**/*.js.flow lib/ --preserve",
    "lint": "npm-run-all -p lint:*",
    "lint:fix": "npm-run-all -p lint:*:fix",
    "lint:js": "eslint --config ../../.eslintrc.json --cache test/",
    "lint:js:fix": "eslint --fix --config ../../.eslintrc.json --cache test/",
    "test": "run-s test:js lint",
    "test:js": "cross-env NODE_ENV=development jest",
    "test:saucelabs": "zuul -- test/*-test.js",
    "test:browser": "zuul --local 8080 --ui mocha-bdd -- test/*-test.js",
    "ci": "npm test",
    "prepublish": "npm run --if-present build"
  },
  "keywords": [
    "flux",
    "cqrs",
    "ddd",
    "architecture",
    "aluminium"
  ],
  "devDependencies": {
    "@types/jest": "^20.0.2",
    "@types/node": "^7.0.5",
    "@types/object-assign": "^4.0.30",
    "babel-cli": "^6.7.5",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^20.0.3",
    "babel-preset-es2015-ie": "^6.6.2",
    "babel-preset-power-assert": "^1.0.0",
    "babel-register": "^6.7.2",
    "babelify": "^7.3.0",
    "cpx": "^1.5.0",
    "cross-env": "^4.0.0",
    "env-development": "^1.0.2",
    "eslint": "^3.16.1",
    "function.name": "^1.0.2",
    "jest": "^20.0.4",
    "mocha": "^3.0.2",
    "npm-run-all": "^4.0.2",
    "power-assert": "^1.4.3",
    "rimraf": "^2.6.0",
    "sinon": "^2.1.0",
    "ts-jest": "^20.0.7",
    "ts-node": "^3.2.0",
    "typescript": "~2.3.1",
    "zuul": "^3.10.1"
  },
  "dependencies": {
    "map-like": "^1.1.2",
    "shallow-equal-object": "^1.0.1"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.(ts|tsx)?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*-test\\.(ts|tsx|js)"
    ],
    "testPathIgnorePatterns": [
      "__obj",
      "node_modules",
      "lib"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
