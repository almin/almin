{
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "rules": {
    "no-console": "warn",
    "no-undef": "error",
    "no-unused-vars": "error",
    "no-var": "error",
    "object-shorthand": "error",
    "prefer-const": "error",
    "prefer-rest-params": "error",
    "prefer-spread": "error",
    "prefer-template": "error",
    "semi": "error",
    "no-extra-semi": "off",
    "no-mixed-spaces-and-tabs": "off",
    "prettier/prettier": [
      "error",
      {
        "printWidth": 120,
        "tabWidth": 4
      }
    ]
  }
}
