{
  "name": "almin",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/almin/almin.git"
  },
  "author": "azu",
  "email": "azuciao@gmail.com",
  "homepage": "https://github.com/almin/almin",
  "license": "MIT",
  "files": [
    "src/",
    "lib/"
  ],
  "bugs": {
    "url": "https://github.com/almin/almin/issues"
  },
  "version": "0.10.0-1",
  "description": "Flux/CQRS patterns for JavaScript app.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "clean": "rimraf lib/ __obj",
    "start:docs": "gitbook serve",
    "build:docs": "gitbook build",
    "build": "npm-run-all -s clean build:src build:lib",
    "build:src": "npm-run-all -p build:src:*",
    "build:src:cp_obj": "cpx 'src/**/*.{js, jsx}' __obj/src --preserve",
    "build:src:tsc": "tsc --project .",
    "build:lib": "npm-run-all -p build:lib:*",
    "build:lib:cp_lib": "cpx '__obj/src/**/*.d.ts' lib/ --preserve",
    "build:lib:cp_type_def": "cpx type-definitions/**/*.js.flow lib/ --preserve",
    "build:lib:down_transform": "cross-env NODE_ENV=production babel __obj/src --out-dir lib/ --source-maps",
    "lint": "npm-run-all -p lint:*",
    "lint:fix": "npm-run-all -p lint:*:fix",
    "lint:docs": "textlint --cache -f pretty-error docs/",
    "lint:docs:fix": "textlint --fix --cache docs/",
    "lint:js": "eslint --ext=js --config .eslintrc.js.json --cache src/ example/",
    "lint:ts": "eslint --ext=ts --config .eslintrc.ts.json --cache src/ example/",
    "lint:js:fix": "eslint --fix --ext=js --config .eslintrc.js.json --cache src/ example/",
    "lint:ts:fix": "eslint --fix --ext=ts --config .eslintrc.ts.json --cache src/ example/",
    "test": "run-s test:js lint test:example test:perf",
    "test:js": "run-s build test:mocha",
    "test:perf": "cd perf/node-memory-leak-testing && npm it",
    "test:mocha": "cross-env NODE_ENV=development mocha",
    "test:saucelabs": "zuul -- test/*-test.js",
    "test:browser": "zuul --local 8080 --ui mocha-bdd -- test/*-test.js",
    "test:example": "npm-run-all --print-label --race -p test:example:*",
    "test:example:counter": "cd ./example/counter && npm it",
    "test:example:shopping-cart": "cd ./example/shopping-cart && npm it",
    "test:example:todomvc": "cd ./example/todomvc && npm it",
    "test:example:todomvc-flow": "cd ./example/todomvc-flow && npm it",
    "test:example:svg-feeling": "cd ./example/svg-feeling && npm it",
    "travis": "npm run build:docs",
    "prepublish": "npm run --if-present build"
  },
  "keywords": [
    "flux",
    "cqrs",
    "ddd",
    "architecture",
    "aluminium"
  ],
  "devDependencies": {
    "@alrra/travis-scripts": "^3.0.1",
    "@types/node": "^7.0.5",
    "add-text-to-markdown": "^1.0.2",
    "babel-cli": "^6.7.5",
    "babel-eslint": "^7.1.1",
    "babel-preset-es2015-ie": "^6.6.2",
    "babel-preset-power-assert": "^1.0.0",
    "babel-register": "^6.7.2",
    "babelify": "^7.3.0",
    "cpx": "^1.5.0",
    "cross-env": "^3.1.4",
    "documentation": "^4.0.0-beta10",
    "documentation-markdown-api-theme": "^1.0.2",
    "documentation-wrapper": "^1.2.3",
    "env-development": "^1.0.2",
    "es6-promise": "^3.1.2",
    "eslint": "^3.16.1",
    "function.name": "^1.0.2",
    "gitbook-cli": "^2.1.3",
    "gitbook-plugin-forkmegithub": "^2.2.0",
    "gitbook-plugin-include-codeblock": "^2.0.0",
    "mocha": "^3.0.2",
    "npm-run-all": "^3.0.0",
    "power-assert": "^1.3.1",
    "rimraf": "^2.6.0",
    "textlint": "^7.1.0",
    "textlint-rule-alex": "^1.0.1",
    "textlint-rule-common-misspellings": "^1.0.1",
    "textlint-rule-no-dead-link": "^3.0.1",
    "typescript": "~2.2.1",
    "typescript-eslint-parser": "^2.0.0",
    "zuul": "^3.10.1"
  },
  "dependencies": {
    "lru-map-like": "^1.1.2",
    "object-assign": "^4.1.0"
  }
}
