{
  "name": "almin",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/almin/almin.git"
  },
  "author": "azu",
  "email": "azuciao@gmail.com",
  "homepage": "https://github.com/almin/almin",
  "license": "MIT",
  "files": [
    "src/",
    "lib/"
  ],
  "bugs": {
    "url": "https://github.com/almin/almin/issues"
  },
  "version": "0.3.1",
  "description": "Flux/CQRS patterns for JavaScript app.",
  "main": "lib/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "NODE_ENV=production babel src --out-dir lib --source-maps",
    "watch": "babel src --out-dir lib --watch --source-maps",
    "prepublish": "npm run --if-present build",
    "lint:docs": "textlint -f pretty-error docs/",
    "test:example": "sh ./test/example-test.sh",
    "test:js": "mocha",
    "test": "npm run test:js && npm run lint:docs && npm run test:example"
  },
  "keywords": [
    "flux",
    "cqrs",
    "ddd",
    "architecture",
    "aluminium"
  ],
  "devDependencies": {
    "babel-cli": "^6.7.5",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-jsdoc-to-assert": "^1.0.1",
    "babel-preset-power-assert": "^1.0.0",
    "babel-register": "^6.7.2",
    "mocha": "^2.4.5",
    "power-assert": "^1.3.1",
    "textlint": "^6.3.0",
    "textlint-rule-alex": "^1.0.1",
    "textlint-rule-common-misspellings": "^1.0.1",
    "textlint-rule-no-dead-link": "^0.2.0"
  },
  "dependencies": {
    "es6-collections": "^0.5.6"
  }
}
