{
  "name": "almin",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/almin/almin.git"
  },
  "author": "azu",
  "email": "azuciao@gmail.com",
  "homepage": "https://github.com/almin/almin",
  "license": "MIT",
  "files": [
    "src/",
    "lib/"
  ],
  "bugs": {
    "url": "https://github.com/almin/almin/issues"
  },
  "version": "0.4.0",
  "description": "Flux/CQRS patterns for JavaScript app.",
  "main": "lib/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start:docs": "gitbook serve",
    "build:docs": "gitbook build",
    "build": "NODE_ENV=production babel src --out-dir lib --source-maps",
    "watch": "babel src --out-dir lib --watch --source-maps",
    "prepublish": "npm run --if-present build",
    "lint:docs": "textlint -f pretty-error docs/",
    "test:example": "nf start --procfile test/Procfile",
    "test:js": "mocha",
    "test:saucelabs": "zuul -- test/*-test.js",
    "test:browser": "zuul --local 8080 --ui mocha-bdd -- test/*-test.js",
    "test": "npm-run-all --print-label --parallel test:js lint:docs test:example",
    "travis": "npm-run-all --print-name --print-label --parallel test:js lint:docs test:example test:saucelabs"
  },
  "keywords": [
    "flux",
    "cqrs",
    "ddd",
    "architecture",
    "aluminium"
  ],
  "devDependencies": {
    "babel-cli": "^6.7.5",
    "babel-preset-es2015-ie": "^6.6.2",
    "babel-preset-jsdoc-to-assert": "^1.0.1",
    "babel-preset-power-assert": "^1.0.0",
    "babel-register": "^6.7.2",
    "babelify": "^7.3.0",
    "documentation-wrapper": "^1.2.2",
    "es6-promise": "^3.1.2",
    "foreman": "^1.4.1",
    "function.name": "^1.0.2",
    "gitbook-cli": "^2.1.3",
    "gitbook-plugin-include-codeblock": "^1.8.2",
    "mocha": "^2.4.5",
    "npm-run-all": "^1.8.0",
    "power-assert": "^1.3.1",
    "textlint": "^6.3.0",
    "textlint-rule-alex": "^1.0.1",
    "textlint-rule-common-misspellings": "^1.0.1",
    "textlint-rule-no-dead-link": "^0.2.0",
    "zuul": "^3.10.1"
  },
  "dependencies": {
    "es6-collections": "^0.5.6",
    "object-assign": "^4.1.0"
  }
}
